<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/project_icon"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/projectNameView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Project Name"
            android:textSize="28sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.088" />

        <TextView
            android:id="@+id/projectDescriptionView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="12dp"
            android:text="This section contains project description as uploaded by"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/projectNameView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/projectNameView"
            app:layout_constraintTop_toBottomOf="@+id/projectNameView" />

        <TextView
            android:id="@+id/techStackView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MERN Stack"
            android:textColor="@color/apexGreen"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/projectNameView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/projectNameView"
            app:layout_constraintTop_toBottomOf="@+id/projectDescriptionView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>